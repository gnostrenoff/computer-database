import java.util.Scanner;

public class Listener {

	public static void main(String[] args) {
		
		Scanner scanIn = new Scanner(System.in);
		String input;
		boolean exit = false;
		
		System.out.println("what do you want to do ?\n");
		System.out.println("\t create (c)\n");
		System.out.println("\t read (r)\n");
		System.out.println("\t update (u)\n");
		System.out.println("\t delete (d)\n");
		System.out.println("\t exit (e)\n");
		
		while(!exit){
			input = scanIn.nextLine();
		    
		    switch(input){
			    case "create":
			    	break;
			    case "read":
			    	break;
			    case "update":
			    	break;
			    case "delete":
			    	break;
			    case "exit":
			    	exit = true;
			    	break;
			    default:
		    	    System.out.println("command not reconized");
		    }
		}
		scanIn.close();            
	}

}
